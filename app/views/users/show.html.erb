<h2>User info h</h2>
<%= current_user.name %>
<%= image_tag current_user.get_profile_image(100,100) %>

<div class="row">
 <%= link_to edit_user_path(@user) ,class:'btn btn-outline-secondary btn-block' do %>
 <i class="fa-solid fa-user-gear"></i>
 <% end %>
</div>

<h2>New book</h2>
<%= form_with model: @book do |f| %>
<h4>Title</h4>
 <%= f.text_field :title %>
<h4>Opinion</h4>
 <%= f.text_area :body %><br>
 <%= f.submit 'Create Book' %>
<% end %>

<h2>Books</h2>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
  <tr>
    <td>
      <%= image_tag current_user.get_profile_image(100,100) %>
    <td>
    <td>
      <%= book.title %>
    </td>
    <td>
      <%= book.body %>
    </td>
  </tr>
<% end %>
  </tbody>
</table>