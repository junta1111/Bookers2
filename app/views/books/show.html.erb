<%= render 'list', book: @book %>

    <div class="col-md 8 offset-md-1">
      <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
         <td>
           <%= image_tag @user.get_profile_image(100,100) %><br>
           <%= link_to @user.name,user_path %>
         </td>
         <td>
           <%= link_to @book.title %>
         </td>
         <td>
           <%= @book.body %>
         </td>
         <td>
           <% if @book.user == current_user %>
         </td>
         <td>
           <%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success edit_book" %>
           <% end %>
         </td>
         <td>
           <% if @book.user == current_user %>
           <%= link_to "Destroy", book_path(@book), class:"btn btn-sm btn-danger destroy_book",method: :delete %>
           <% end %>
         </td>
        </table>
    </div>
  </div>
</div>
