<%= render 'books/list', book: @book_new %>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
         <td>
           <%= link_to user_path(@user.id) do %>
           <%= image_tag @user.get_profile_image(100,100) %>
           <% end %>
           <br>
           <%= link_to @user.name,user_path(@user.id) %>
         </td>
         <td>
           <%= link_to @book.title %>
         </td>
         <td>
           <%= @book.body %>
         </td>
         <td>
           <% if @book.user == current_user %>
         </td>
         <td>
           <%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success edit_book" %>
           <% end %>
         </td>
         <td>
           <% if @book.user == current_user %>
           <%= link_to "Destroy", book_path(@book), class:"btn btn-sm btn-danger destroy_book",method: :delete, data: { confirm: "本当に消しますか？" } %>
           <% end %>
         </td>
        </table>
    </div>
  </div>
</div>
